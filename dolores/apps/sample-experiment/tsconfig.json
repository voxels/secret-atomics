{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "lib": [
            "es2018",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@dolores/mock-harness": [
                "../../packages/mock-harness/src/index.ts"
            ],
            "@dolores/signal-integrity": [
                "../../packages/signal-integrity/src/index.ts"
            ],
            "@dolores/ui-templates": [
                "../../packages/ui-templates/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}