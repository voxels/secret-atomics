{
  "name": "secret-atomics",
  "version": "2.0.0",
  "description": "Secret Atomics - Product Design and Engineering Studio (based on Medal Social NextMedal template)",
  "author": "Secret Atomics",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": "use pnpm instead - see packageManager field",
    "yarn": "use pnpm instead - see packageManager field"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "rimraf .next ",
    "dev": "next dev",
    "prebuild": "pnpm generate:collections",
    "build:dolores": "cd dolores && npm run build --workspace=apps/pixel-placer && mkdir -p ../public/dolores && cp -r apps/pixel-placer/dist/* ../public/dolores/",
    "build": "pnpm build:dolores && next build",
    "start": "next start",
    "generate:collections": "tsx scripts/generate-collections.ts",
    "setup:check": "npx tsx src/scripts/validate-setup.ts",
    "lint": "biome check .",
    "format": "biome format . --write",
    "manifest": "SANITY_CLI_EXTRACT_MANIFEST_ENABLED=false echo 'Manifest extraction disabled'",
    "typecheck": "tsc --noEmit",
    "validate": "sanity-template-validate",
    "docker:build": "./scripts/docker-build.sh",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:unit": "vitest --run --project=unit",
    "test:components": "vitest --run --project=components",
    "test:integration": "vitest --run --project=integration",
    "test:contracts": "vitest --run --project=contracts",
    "e2e": "playwright test --project=e2e",
    "e2e:smoke": "playwright test --project=smoke",
    "e2e:visual": "playwright test --project=visual",
    "e2e:visual:update": "playwright test --project=visual --update-snapshots",
    "e2e:a11y": "playwright test --project=accessibility",
    "e2e:perf": "playwright test --project=performance",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:all": "playwright test",
    "perf:budget": "npx tsx src/scripts/validate-performance-budget.ts",
    "perf:budget:verbose": "npx tsx src/scripts/validate-performance-budget.ts --verbose",
    "perf:validate": "pnpm build && pnpm perf:budget && pnpm e2e:perf",
    "prepare": "husky"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@medalsocial/sdk": "latest",
    "@mux/mux-player": "^3.10.2",
    "@mux/mux-player-react": "^3.10.2",
    "@sanity/asset-utils": "^2.3.0",
    "@sanity/block-tools": "^3.70.0",
    "@sanity/client": "^7.14.1",
    "@sanity/code-input": "^7.0.2",
    "@sanity/document-internationalization": "^4.1.1",
    "@sanity/icons": "^3.7.4",
    "@sanity/image-url": "^2.0.2",
    "@sanity/schema": "^5.9.0",
    "@sanity/ui": "^3.1.11",
    "@sanity/vision": "^5.1.0",
    "@sentry/nextjs": "^10.32.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/jsdom": "^27.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "geist": "^1.5.1",
    "isomorphic-dompurify": "^2.35.0",
    "lucide-react": "^0.562.0",
    "mermaid": "^11.12.2",
    "motion": "^12.23.26",
    "next": "^16.1.1",
    "next-intl": "^4.7.0",
    "next-safe-action": "^8.0.11",
    "next-sanity": "^12.0.7",
    "next-themes": "^0.4.6",
    "nodemailer": "^8.0.1",
    "nuqs": "^2.8.6",
    "pino": "^10.1.0",
    "pnpm": "^10.28.2",
    "react": "^19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.2.3",
    "react-player": "^3.4.0",
    "sanity": "^5.9.0",
    "sanity-plugin-media": "^4.1.1",
    "sanity-plugin-mux-input": "^2.12.1",
    "sharp": "^0.34.5",
    "shiki": "^3.20.0",
    "sonner": "^2.0.7",
    "styled-components": "^6.1.19",
    "tailwind-merge": "^3.4.0",
    "turndown": "^7.2.2",
    "vanilla-cookieconsent": "^3.1.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@biomejs/biome": "2.3.11",
    "@playwright/test": "^1.57.0",
    "@sanity/language-filter": "^4.0.6",
    "@sanity/template-validator": "^2.4.3",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.10",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "4.0.16",
    "babel-plugin-react-compiler": "^1.0.0",
    "dotenv": "^17.2.3",
    "fast-check": "^4.5.3",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lighthouse": "^13.0.1",
    "pino-pretty": "^13.1.3",
    "playwright-lighthouse": "^4.0.0",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "sanity-plugin-internationalized-array": "^3.2.2",
    "schema-dts": "^1.1.5",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vitest-axe": "^0.1.0"
  },
  "pnpm": {
    "overrides": {
      "immer": "^11.1.0",
      "prismjs": "^1.30.0"
    }
  },
  "packageManager": "pnpm@10.27.0"
}
